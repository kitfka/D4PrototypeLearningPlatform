@page
@model D4PrototypeLearningPlatform.Pages.Student.ListModel
@{
}


@foreach (var module in Model.Cursus.Modules)
{
    <h3>@module.Name</h3>

@*    <p>
        <a asp-page="Create">Create New</a>
    </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => module.Opgaves[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => module.Opgaves[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => module.Opgaves[0].Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in module.Opgaves)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a asp-page="/SpikeEditor" asp-route-id="@item.Id" asp-route-cursus="@Model.Cursus.Id" >Try It</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

